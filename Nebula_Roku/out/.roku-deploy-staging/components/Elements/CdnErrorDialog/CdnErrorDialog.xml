<?xml version="1.0" encoding="utf-8" ?>

<component 
    name="CdnErrorDialog" 
    extends="Group" 
    focusable="true"
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">

    <script type="text/brightscript" uri="CdnErrorDialog.brs" />
    <script type="text/brightscript" uri="pkg:/source/Utils/i18nUtils.brs" />
    <script type="text/brightscript" uri="pkg:/source/Utils.brs" />

    <interface>
      <field id="retry" type="boolean" alwaysnotify="true" />
      <field id="errorCode" type="string" value="--" onChange="onErrorCodeChange" />
      <field id="showSpinner" type="boolean" value="false" onChange="onShowSpinnerChange" />
      <field id="buttonDisabled" type="boolean" value="false" onChange="onButtonDisabledChange" />
      <!-- Permite overlay transparente cuando el Player lo necesita. -->
      <field id="overlayTransparent" type="boolean" value="false" onChange="onOverlayTransparentChange" />
    </interface>

    <children>
      <Rectangle id="overlay" color="0x00000099"/>

      <Group id="dialogContainer"  >
        <Rectangle id="dialogBackground" color="0x2C2C2CFF" />

        <LayoutGroup
          id="contentLayout"
          layoutDirection="vert"
          horizAlignment="center"
          vertAlignment="center">
          <Poster
            id="logo"
            loadDisplayMode="scaleToFit"
            uri="pkg:/images/client/logo.png" />
            <Rectangle id="spacerLogo" height="20" width="1" color="0x00000000" />
          <Label
            id="titleLabel"
            horizAlign="center"
            font="font:SmallSystemFont" />
            <Rectangle id="spacerTitle" height="20" width="1" color="0x00000000" />
          <Label
            id="messageLabel"
            horizAlign="center"
            numLines="2"
            wrap="true"
            font="font:SmallestSystemFont" />
            <Rectangle id="spacerMessage" height="20" width="1" color="0x00000000" />
          <Label
            id="codeLabel"
            horizAlign="center"
            font="font:SmallestSystemFont" />
            <Rectangle id="spacerCode" height="20" width="1" color="0x00000000" />
          <QvButton id="retryButton" />
        </LayoutGroup>

        <Spinner id="spinner" visible="false" />
      </Group>
    </children>

</component>
