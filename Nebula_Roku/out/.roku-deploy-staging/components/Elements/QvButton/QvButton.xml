<?xml version="1.0" encoding="utf-8" ?>

<component 
    name="QvButton" 
    extends="Group" 
    focusable="true"
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">

    <script type="text/brightscript" uri="QvButton.brs"/>
    <script type="text/brightscript" uri="pkg:/source/Utils.brs" />

    <interface>
      <!-- Paramentros de Entrada -->
      <field id="size" type="array" onChange="changeSize" value="[140, 50]"/>
      <field id="text" type="string" onChange="updateText" />
      <field id="textColor" type="string" value="" onChange="updateTextColor" />
      <field id="borderColor" type="string" value="" onChange="updateBorderColor" />
      <field id="font" type="string" value="font:MediumSystemFont" onChange="updateFont" />

      <!-- Paramentros de Entrada/Salida -->
      <field id="disable" type="boolean" value="false" onChange="onChangeDisable" />

      <!-- Paramentros de Salida -->
      <field id="focusDown" type="node"/>
      <field id="focusUp" type="node"/>
      <field id="focusLeft" type="node"/>
      <field id="focusRight" type="node"/>
    </interface>

    <children>
      
      <!-- item del fondo -->
      <Rectangle
        id="butonBg"
        width="140"
        height="50"
        focusable="true"
        color="0x00000000" >
          <LayoutGroup      
            id="layoutContainer"
            layoutDirection="vert"
            horizAlignment="center"
            vertAlignment="center">
            <Label 
              id="btnText"
              font="font:SmallestSystemFont" />
          </LayoutGroup>
      </Rectangle>

      <!-- Bordes del cuadro con separación de 2 píxeles -->
      <Group translation="[-1,-1]">
        <Rectangle id="rectLeft" translation="[0, 0]"/>  <!-- Izquierda -->
        <Rectangle id="rectTop" translation="[0, 0]"/>  <!-- Superior -->
        <Rectangle id="rectRight"/> <!-- Derecha -->
        <Rectangle id="rectBottom"/> <!-- Inferior -->
      </Group>

    </children>
</component>
