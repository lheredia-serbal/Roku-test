<?xml version="1.0" encoding="utf-8" ?>

<component 
    name="ProfileItem" 
    extends="Group" 
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">

    <script type="text/brightscript" uri="pkg:/source/Utils.brs" />
    <script type="text/brightscript" uri="ProfileItem.brs"/>
    <script type="text/brightscript" uri="pkg:/source/Utils.brs" />

    <interface>
        <!-- Paramentros de Entrada -->
        <field id="uriImage" type="string" onChange="imageChanged" value="" />
        <field id="name" type="string" onChange="nameChanged" value="" />
        <field id="profileId" type="integer" value="0" />
        <field id="showManageProfile" type="boolean" value="false"/>
        
        <!-- Paramentros de entrada/Salida -->
        <field id="size" type="array" onChange="setSize"/>
        <field id="auxInfo" type="string" value="" />

        <!-- Paramentros de Salida -->
        <field id="focusLeft" type="node"/>
        <field id="focusRight" type="node"/>
    </interface>

    <children>
        <!-- Fondo negro -->
        <Rectangle id="theRect" color="#000000">

            <!-- Imagen item -->
            <Group translation="[0, 0]">
                <Poster 
                    id="itemImage"
                    loadDisplayMode="scaleToZoom"/> 
                <Poster 
                    id="opacityByEdit" 
                    translation="[0,0]"
                    visible="false"
                    loadDisplayMode="scaleToFit"
                    uri="pkg:/images/shared/edit_profile.png"/> 
            </Group>

            <SelectionBox
                id="selectedIndicator"
                translation="[-2, -2]"
                visible="false"
                size="[249, 249]"/>
    
            <Rectangle
                id="opacityLayout"
                translation="[0,0]"
                color="#000000"
                opacity="0.33"/>

            <Label
                id="profileName"
                translation="[0, 260]"
                width="250" 
                wrap="false"
                maxLines="1"
                horizAlign="center"
                color="#BBBBBB"
                font="font:SmallSystemFont"
            />
        </Rectangle>
    </children>
</component>
