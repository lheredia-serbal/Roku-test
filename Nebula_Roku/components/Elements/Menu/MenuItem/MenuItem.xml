<?xml version="1.0" encoding="utf-8" ?>

<component 
    name="MenuItem" 
    extends="Group"
    focusable="true"
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
    
    <script type="text/brightscript" uri="MenuItem.brs" />
    <script type="text/brightscript" uri="pkg:/source/Utils.brs" />

    <interface>
        <!-- Paramentros de Entrada -->
        <field id="menuKey" type="string" />
        <field id="menuId" type="integer"/>
        <field id="code" type="string" />
        <field id="behavior" type="string" />
        <field id="selected" type="boolean" value="false" onChange="onSelectedItem" />
        <field id="text" type="string" onChange="updateText" />
        <field id="imageURL" type="string" onChange="updateImage" />
        <field id="opacityText" type="float" onChange="onOpacityChange" />
        
        <!-- Paramentros de Salida -->
        <field id="focusDown" type="node" />
        <field id="focusUp" type="node" />
    </interface>

    <children> 
        <Group id="menuItemContent">
            <LayoutGroup
                id="menuItemLayout"
                layoutDirection="horiz"
                horizAlignment="left"
                vertAlignment="top"
                itemSpacings="[20]">

                <Group>
                  <Poster 
                        id="itemImage"
                        loadDisplayMode="scaleToFit" />
                    
                    <Rectangle
                        id="itemIndicatorSelected"
                        visible="false" />
                </Group>

                <Label 
                    id="itemText"
                    opacity="0.0"
                    wrap="false" 
                    maxLines="1" 
                    vertAlign="center"
                    font="font:TinySystemFont" />
            </LayoutGroup>
        </Group>
    </children>

</component>
