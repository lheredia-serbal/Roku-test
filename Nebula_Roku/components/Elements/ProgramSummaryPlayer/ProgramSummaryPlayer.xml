<?xml version="1.0" encoding="utf-8" ?>

<component 
  name="ProgramSummaryPlayer" 
  extends="Group" 
  xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
  
  <script type="text/brightscript" uri="ProgramSummaryPlayer.brs"/>
  <script type="text/brightscript" uri="pkg:/source/Utils/DateFunctions.brs" />
  <script type="text/brightscript" uri="pkg:/source/Utils/i18nUtils.brs" />
  <script type="text/brightscript" uri="pkg:/source/Utils.brs" />

  <interface>
    <!-- Paramentros de Entrada -->
    <field id="catchupDuration" type="integer" value="0" />
    <field id="program" type="node" onChange="changeProgram" />
    <field id="initConfig" type="boolean" value="false" onChange="initConfig" />
    <field id="showAvailableView" type="boolean" value="false" />
  </interface>
  
  <children>
    <Rectangle 
      id="programRectangleContainer"
      color="0x00000000">
      
      <LayoutGroup 
        id="programContainer"
        layoutDirection="vert"
        horizAlignment="left"
        vertAlignment="bottom"
        addItemSpacingAfterChild="false">
    
        <Label 
          id="programTitle"
          height="1"
          vertAlign="center"
          font="font:MediumBoldSystemFont"
          visible="false" />

        <Label 
          id="programSubtitle"
          height="1"
          vertAlign="center"
          font="font:SmallBoldSystemFont"
          visible="false" />

        <LayoutGroup
          layoutDirection="horiz"
          horizAlignment="left"
          itemSpacings="[10]" >
          
          <Label 
            id="programCategory"
            height="1"
            vertAlign="center"
            font="font:TinySystemFont"
            visible="false" />

          <Label 
            id="programDate"
            height="1"
            vertAlign="center"
            font="font:TinySystemFont"
            visible="false" />
        </LayoutGroup>

        <Label 
          id="programSynopsis"
          height="1"
          vertAlign="center"
          wrap="true"
          maxLines="3"
          font="font:SmallerSystemFont"
          visible="false" />

        <QvButton
          id="programAvailableView"
          font="font:TinySystemFont"
          size="[1,1]"/>
      </LayoutGroup>
    </Rectangle>
    
  </children>
</component>
