<?xml version="1.0" encoding="utf-8" ?>

<component 
    name="SquareItem" 
    extends="Group" 
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
    
    <script type="text/brightscript" uri="SquareItem.brs"/>
    <script type="text/brightscript" uri="pkg:/source/Utils.brs" />

    <interface>
        <!-- Paramentros de Entrada -->
        <field id="itemContent" type="node"   onChange="itemContentChanged" />
        <field id="currRect"    type="rect2d" onChange="currRectChanged" />
        <field id="groupHasFocus" type="boolean" onChange="focusPercentChanged" />
        <field id="focusPercent" type="float" onChange="focusPercentChanged" />
    </interface>

    <children>
        <!-- Fondo negro -->
        <Rectangle id="theRect" color="#000000">
            <Group translation="[0, 0]" >
                <!-- Imagen centrada con 30px de margen -->
                <Poster 
                    id="itemImage" 
                    width="60" 
                    height="60"
                    loadWidth="60"
                    loadHeight="60"
                    translation="[30, 16]"
                    loadDisplayMode="scaleToFit"/>
                
                <!-- Etiqueta para el título, centrada y con 2 líneas máximo -->
                <Label 
                    id="itemTitle" 
                    width="110" 
                    height="48"
                    translation="[5, 72]"
                    wrap="true" 
                    maxLines="2" 
                    horizAlign="center" 
                    vertAlign="center"
                    ellipsizeOnBoundary="true"
                    font="font:TinySystemFont"/>            
            </Group>
        </Rectangle>
        <Rectangle id="opacityLayout" color="#000000" opacity="0.33" />
    </children>
</component>
