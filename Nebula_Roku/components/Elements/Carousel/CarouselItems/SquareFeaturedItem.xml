<?xml version="1.0" encoding="utf-8" ?>

<component 
    name="SquareFeaturedItem" 
    extends="Group" 
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
    
    <script type="text/brightscript" uri="SquareFeaturedItem.brs"/>
    <script type="text/brightscript" uri="pkg:/source/Utils.brs" />
    <script type="text/brightscript" uri="pkg:/source/CarouselConstants.brs" />

    <interface>
        <!-- Paramentros de Entrada -->
        <field id="itemContent" type="node"   onChange="itemContentChanged" />
        <field id="currRect"    type="rect2d" onChange="currRectChanged" />
        <field id="groupHasFocus" type="boolean" onChange="focusPercentChanged" />
        <field id="focusPercent" type="float" onChange="focusPercentChanged" />
    </interface>

    <children>
        <!-- Fondo negro -->
        <Rectangle id="theRect" color="#000000">
            <LayoutGroup
                layoutDirection="vert"
                horizAlignment="left"
                vertAlignment="top"
                itemSpacings="[12]"
                translation="[12, 14]">
                <LayoutGroup
                    layoutDirection="horiz"
                    horizAlignment="left"
                    vertAlignment="top"
                    itemSpacings="[2]">

                    <LayoutGroup
                        layoutDirection="vert"
                        horizAlignment="left"
                        vertAlignment="center"
                        itemSpacings="[6]">
                        <Label 
                            id="title" 
                            width="190" 
                            wrap="false" 
                            maxLines="1" 
                            visible="false"
                            font="font:SmallestSystemFont"/>
                            
                        <Label 
                            id="category" 
                            width="190" 
                            wrap="false" 
                            maxLines="1" 
                            visible="false"
                            font="font:SmallestSystemFont"/>

                        <Label 
                            id="dateTime" 
                            width="190" 
                            wrap="false" 
                            maxLines="1" 
                            visible="false"
                            font="font:TinySystemFont"/>
                    </LayoutGroup> 
                    
                    <Poster 
                        id="imageItem" 
                        width="60" 
                        height="60"
                        loadWidth="60"
                        loadHeight="60"/>
                </LayoutGroup>
                
                <LayoutGroup
                    layoutDirection="horiz"
                    horizAlignment="left"
                    vertAlignment="top">
                    <Rectangle id="progressLeft" height="3"/>
                    <Rectangle id="progressRight" height="3"/>
                </LayoutGroup>
            </LayoutGroup>
        </Rectangle>
        <Rectangle id="opacityLayout" color="#000000" opacity="0.33" />
    </children>
</component>
